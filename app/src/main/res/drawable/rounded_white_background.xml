<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/white" /> <!-- Background color -->
    <corners android:radius="16dp" /> <!-- Rounded corners -->
    <stroke android:width="1dp" android:color="@color/light_gray" /> <!-- Optional border -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="16dp"
        android:bottom="16dp" /> <!-- Optional padding inside the background -->
    <elevation android:elevation="6dp" /> <!-- Shadow effect -->
</shape>
